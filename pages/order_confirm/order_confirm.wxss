.container {
  padding: 20px;
}

.ticket-info {
  margin-bottom: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.ticket-image {
  width: 100%;
  border-radius: 8px;
  margin: 20px 0;
}

