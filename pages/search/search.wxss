/* pages/search/search.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.search-bar {
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
}

.content {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.card:nth-child(odd) {
  margin-top: 0;
}

.card:nth-child(even) {
  margin-top: 30rpx;
}

.card-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.card-content {
  padding: 20rpx;
}

.card-title {
  font-size: 18rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.card-description {
  font-size: 14rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.card-footer {
  display: flex;
  align-items: center;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.author {
  flex: 1;
  font-size: 14rpx;
}

.likes {
  display: flex;
  align-items: center;
  font-size: 14rpx;
  color: #ff0000;
}

.like-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 5rpx;
}
