/* pages/discover/discover.wxss */
.container {
  padding: env(safe-area-inset-left) 20rpx env(safe-area-inset-right) 20rpx;
}

.navbar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding-top: env(safe-area-inset-top); /* 适配刘海屏 */
}

.navbar-item {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid transparent;
}

.navbar-item.active {
  border-bottom: 2rpx solid #1e90ff;
  font-weight: bold;
}

.content {
  flex: 1;
  margin-top: 20rpx; /* 保证内容不会紧贴导航栏 */
}

.follow-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.follow-name {
  font-size: 28rpx;
}

.follow-button {
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  background-color: #1e90ff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
}

.follow-button.followed {
  background-color: #ccc;
}

.posts-scroll-view {
  display: flex;
  flex-direction: row;
  overflow-x: scroll;
}

.card {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 200rpx;
}

.card-content {
  padding: 10rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
}

.card-description {
  font-size: 24rpx;
  color: #666;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.author {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.like-button {
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  background-color: transparent;
  border: none;
  cursor: pointer;
}

.like-button.liked {
  color: #ff0000; /* 点赞后的颜色 */
}

.add-post-button {
  position: fixed;
  bottom: env(safe-area-inset-bottom); /* 适配刘海屏 */
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ff1e1e;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
}
